<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.freese.misc</groupId>
    <artifactId>misc-maven-proxy-test</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>${project.groupId} - ${project.artifactId}</name>
    <description>TEST-POM</description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.build.propertiesEncoding>UTF-8</project.build.propertiesEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.build.timestamp.format>yyyyMMdd-HHmmss</maven.build.timestamp.format>
        <buildTimestamp>${maven.build.timestamp}</buildTimestamp>
        <createChecksum>true</createChecksum>

        <maven.compiler.target>20</maven.compiler.target>
        <maven.compiler.source>20</maven.compiler.source>

        <version_jakarta.xml.bind-api>4.0.0</version_jakarta.xml.bind-api>
        <version_jaxb-runtime>4.0.3</version_jaxb-runtime>
        <version_slf4j-api>2.0.7</version_slf4j-api>
        <version_netty-all>4.1.94.Final</version_netty-all>
        <version_junit-jupiter>5.9.3</version_junit-jupiter>

        <version_maven-toolchains-plugin>3.1.0</version_maven-toolchains-plugin>
    </properties>

    <distributionManagement>
        <repository>
            <id>repo-releases</id>
            <url>http://localhost:7999/local-maven-releases</url>
            <name>Enthält deployte Release Artefakte</name>
        </repository>
        <snapshotRepository>
            <id>repo-snapshots</id>
            <url>http://localhost:7999/local-maven-snapshots</url>
            <name>Enthält deployte Snapshot Artefakte</name>
        </snapshotRepository>
        <!--        <site>-->
        <!--            <id>local-tmp</id>-->
        <!--            <url>file:/tmp/maven-distribution/sites/${project.version}</url>-->
        <!--            <name>Enthält die generierten Homepages</name>-->
        <!--        </site>-->
    </distributionManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-toolchains-plugin</artifactId>
                <version>${version_maven-toolchains-plugin}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>toolchain</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <toolchains>
                        <jdk>
                            <version>${maven.compiler.target}</version>
                            <vendor>openjdk</vendor>
                        </jdk>
                    </toolchains>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <resources>
                        <resource>
                            <!-- Additional Folders overwrite the Defaults. -->
                            <directory>${project.basedir}/src/main/resources</directory>
                            <excludes>
                                <exclude>proxy-config.xml</exclude>
                            </excludes>
                        </resource>
                        <resource>
                            <directory>${project.basedir}//src/main/xsd</directory>
                        </resource>
                    </resources>
                </configuration>
            </plugin>
            <plugin>
                <!-- jaxb2:xjc -->
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>xjc</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <sources>
                        <source>${project.basedir}/src/main/xsd/proxy-config.xsd</source>
                    </sources>
                    <xjbSources>
                        <xjbSource>${project.basedir}/src/main/xsd/schema.xjb</xjbSource>
                    </xjbSources>
                    <packageName>de.freese.maven.proxy.config</packageName>
                    <encoding>${project.build.sourceEncoding}</encoding>
                    <noPackageLevelAnnotations>true</noPackageLevelAnnotations>
                    <readOnly>true</readOnly>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- compile scope -->
        <dependency>
            <groupId>jakarta.xml.bind</groupId>
            <artifactId>jakarta.xml.bind-api</artifactId>
            <version>${version_jakarta.xml.bind-api}</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${version_slf4j-api}</version>
        </dependency>

        <!-- runtime scope -->
        <dependency>
            <groupId>org.glassfish.jaxb</groupId>
            <artifactId>jaxb-runtime</artifactId>
            <version>${version_jaxb-runtime}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>${version_slf4j-api}</version>
            <scope>runtime</scope>
        </dependency>

        <!-- provided scope -->
        <!-- test scope -->
        <dependency>
            <groupId>io.netty</groupId>
            <artifactId>netty-all</artifactId>
            <version>${version_netty-all}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>${version_junit-jupiter}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

</project>
